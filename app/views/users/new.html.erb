<div class="row">
  <div class="sixteen columns">
    <h1>Sign Up</h1>
    <hr>
  </div>
  <div class="one-third column">
    <br class="clear">
  </div>
  <div class="one-third column">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Create my account", class: "button full-width" %>
    <% end %>
  </div>
  <div class="one-third column">
    <br class="clear">
  </div>
</div>